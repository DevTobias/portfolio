<style is:global>
  body.preload *,
  body.preload *::before,
  body.preload *::after {
    animation-duration: 0s !important;
    transition-property: none !important;
  }
</style>

<script>
  document.body.classList.toggle('preload');
  setTimeout(() => document.body.classList.toggle('preload'), 500);
</script>
